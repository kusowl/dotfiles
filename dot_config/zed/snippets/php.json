{
  "this": {
    "prefix": "this",
    "body": "$this-> {$0}"
  },
  "pubf": {
    "prefix": "pubf",
    "body": "public function ${1:name}(${2:variables}){$0}"
  },
  "echo": {
    "prefix": "echo",
    "body": "echo ${1:$variable};$0",
    "description": "Echo statement"
  },
  "var_dump": {
    "prefix": "dump",
    "body": "var_dump(${1:$variable});$0",
    "description": "Variable dump"
  },
  "foreach": {
    "prefix": "fore",
    "body": ["foreach (${1:$array} as ${2:$key} => ${3:$value}) {", "\t${0:// code}", "}"],
    "description": "Foreach loop with key and value"
  },
  "if": {
    "prefix": "if",
    "body": ["if (${1:condition}) {", "\t${0:// code}", "}"],
    "description": "If statement"
  },
  "function": {
    "prefix": "fun",
    "body": ["function ${1:functionName}(${2:$parameters}) {", "\t${0:// code}", "}"],
    "description": "Function declaration"
  }
}
